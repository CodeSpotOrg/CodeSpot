extends ../partials/header
block content 
  br
  br
  br
  br 
  a(href="/auth/facebook")
    div Log on with Facebook
  div
    form(action="/auth/register" method="POST")
      input(type="text", placeholder="username", name="user[username]",required)  
      input(type="password", placeholder=" password",name="user[password]",required)
      input(type="password", placeholder=" password",name="user[confirm]",required)
      input(type="email", placeholder="email(optional)",name="user[email]")
      input(type="url", placeholder="avatar.jpeg",name="user[img_url]") 
      input(type='hidden',name='url')
      input(type="submit",value="Sign Up")   
  div
    form(action="/auth/login" method="POST")
      input(type="text", placeholder="username", name="user[username]",autofocus,required)  
      input(type="password", placeholder=" password",name="user[password]",required)
      input(type='hidden',name='url')
      input(type="submit",value="Login")  